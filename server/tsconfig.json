{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    // "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    //"jsx": "react",
    "allowJs": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    // "noImplicitUseStrict":false,
    "types": [
      "node",
    ]
  },
  "lib": [
    "es2018"
  ],
  "typeAcquisition": {
      "enable": true
  },
  "include": [
      "./src/**/*"
  ]
}
